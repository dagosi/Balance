<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.new', :default => "Sign In") %>
  </h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), 
             html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
      <div class="control-group">
	<%= f.label :remember_me, class: 'control-label' %>
	<div class="controls">
	  <%= f.check_box :remember_me, class: 'checkbox_field' %>
	</div>
      </div>
    <% end -%>

  <div class="form-actions">
    <%= f.submit "Sign in", class: 'btn btn-primary' %><br /><br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>
