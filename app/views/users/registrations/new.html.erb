<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.new', :default => "Sign Up") %>
  </h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
             html: { class: 'form-horizontal' }) do |f| %>

  <% if resource.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, class: 'email_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, class: 'password_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, class: 'password_field' %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %><br /><br />
    <%= render "devise/shared/links" %>
  </div>
<% end %>
