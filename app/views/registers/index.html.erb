<h1>Listing registers</h1>

<table>
  <tr>
    <th>References</th>
    <th>Date</th>
    <th>Description</th>
    <th>Amount</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registers.each do |register| %>
  <tr>
    <td><%= register.references %></td>
    <td><%= register.date %></td>
    <td><%= register.description %></td>
    <td><%= register.amount %></td>
    <td><%= register.type %></td>
    <td><%= link_to 'Show', register %></td>
    <td><%= link_to 'Edit', edit_register_path(register) %></td>
    <td><%= link_to 'Destroy', register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

