<%= simple_form_for @register, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= render partial: 'home/error_messages', locals: { model: @register } %>

  <%= f.input :date %>
  <%= f.input :description %>
  <%= f.input :category, collection: @categories, prompt: "Select a category..." %>
  <%= f.input :amount, label: "Amount ($)" %>
  <%= f.input :balance_type, collection: Register::BALANCE_TYPE, prompt: "Select a balance type..." %>
  
  <div id="register_paid_input">
    <%= f.input :paid %>
  </div>
  <%= f.input :payment_type %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                registers_path, :class => 'btn' %>
  </div>
<% end %>
